<style>
  .social-links {
    display: flex;
    justify-content: center;
    align-items: center;
    gap: 1em;
  }
  .social-links a {
    text-decoration: none;
    color: rgb(var(--gray));
    display: flex;
    justify-content: center;
    align-items: center;
    transition: all 300ms;
  }
  .social-links a:hover {
    color: var(--theme);
  }
</style>
